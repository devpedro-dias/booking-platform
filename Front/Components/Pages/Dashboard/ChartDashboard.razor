<RadzenCard Variant="Variant.Outlined">
    <RadzenText Text="Quarterly Revenue" TextStyle="TextStyle.H6" Class="rz-mb-4" />
    <RadzenChart>
        <RadzenColumnSeries Data="@revenue1" CategoryProperty="Quarter" ValueProperty="Revenue" Title="Sales Team 1" />
        <RadzenColumnSeries Data="@revenue2" CategoryProperty="Quarter" ValueProperty="Revenue" Title="Sales Team 2" />
        <RadzenCategoryAxis Padding="20" />
        <RadzenValueAxis>
            <RadzenGridLines Visible="true" />
            <RadzenAxisTitle Text="Revenue" />
        </RadzenValueAxis>
        <RadzenLegend Visible="true" />
    </RadzenChart>
</RadzenCard>

